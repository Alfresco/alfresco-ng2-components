    },
    {
      "key": "es",
      "label": "Español"
    },
    {
      "key": "ja",
      "label": "日本語"
    },
    {
      "key": "nl",
      "label": "Nederlands"
    },
    {
      "key": "pt-BR",
      "label": "Português (Brasil)"
    },
    {
      "key": "nb",
      "label": "Bokmål"
    },
    {
      "key": "ru",
      "label": "Русский"
    },
    {
      "key": "zh-CN",
      "label": "中文简体"
    },
    {
      "key": "ar",
      "label": "عربى",
      "direction": "rtl"
    },
    {
      "key": "cs",
      "label": "Czech"
    },
    {
      "key": "pl",
      "label": "Polish"
    },
    {
      "key": "fi",
      "label": "Finnish"
    },
    {
      "key": "da",
      "label": "Danish"
    },
    {
      "key": "sv",
      "label": "Swedish"
    }

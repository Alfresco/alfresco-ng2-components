{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "rootDir": "..",
    "baseUrl": ".",
    "skipLibCheck": false,
    "types": [],
    "paths": {
      "@alfresco/adf-core": [
        "../../lib/core"
      ],
      "@alfresco/adf-content-services": [
        "../../lib/content-services"
      ],
      "@alfresco/adf-process-services": [
        "../../lib/process-services"
      ],
      "@alfresco/adf-insights": [
        "../../lib/insights"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": false
  }
}

{
    "ecmHost": "http://{hostname}:{port}/ecm",
    "bpmHost": "http://{hostname}:{port}/bpm",
    "application": {
        "name": "Alfresco ADF Appplication"
    },
    "pagination": {
        "size": 25
    },
    "files": {
            "excluded": [".DS_Store", "desktop.ini", ".git"]
    },
    "activiti": {
        "rest": {
            "fields": [
                {
                    "processId": "0",
                    "taskId": "7501",
                    "fieldId": "label10",
                    "values": [
                        { "id": "f1", "name": "Field 1" },
                        { "id": "f2", "name": "Field 2" },
                        { "id": "f3", "name": "Field 3" }
                    ]
                }
            ]
        }
    },

{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "declaration": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["jasmine", "node", "jasminewd2"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@alfresco/adf-process-services-cloud": ["./process-services-cloud/"],
      "@alfresco/adf-testing": ["./testing/"],
      "@alfresco/adf-process-services": ["./process-services/"],
      "@alfresco/adf-content-services": ["./content-services/"],
      "@alfresco/adf-extensions": ["./extensions/"],
      "@alfresco/adf-core": ["./core/"],
      "@alfresco/adf-core/*": ["./core/*/public-api.ts"],
      "@alfresco/adf-insights": ["./analytics"]
    },
    "lib": ["es2018", "esnext.array", "esnext.asynciterable", "dom"],
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "*/node_modules",
    "*/demo",
    "config",
    "*/coverage",
    "node_modules",
    "*/dist",
    "dist"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "typedocOptions": {
    "json": "docs/docs.json",
    "exclude": ["**/*.spec.ts", "node_modules"],
    "ignoreCompilerErrors": true
  }
}

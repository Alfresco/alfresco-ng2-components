{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "sourceMap": false,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}

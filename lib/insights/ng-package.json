{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/insights/",
  "assets": [
    {
      "glob": "assets/**/*",
      "input": "./src/lib",
      "output": "/bundles/"
    },
    {
      "glob": "i18n/*.json",
      "input": "./src/lib",
      "output": "/bundles/assets/adf-insights/"
    }
  ],
  "lib": {
    "entryFile": "src/public-api.ts",
    "flatModuleFile": "adf-insights"
  }
}

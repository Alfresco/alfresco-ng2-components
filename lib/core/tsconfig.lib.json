{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/core/",
    "declarationMap": true,
    "baseUrl": "./",
    "paths": {
      "@alfresco/adf-extensions": ["../dist/extensions"],
      "@alfresco/adf-extensions/*": ["../dist/extensions/*"]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "strictTemplates": true
  }
}

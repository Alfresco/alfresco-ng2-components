{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/core/",
    "declarationMap": true,
    "baseUrl": "src",
    "paths": {
      "@alfresco/adf-extensions": ["../../dist/extensions"],
      "@alfresco/adf-extensions/*": ["../../dist/extensions/*"]
    },
    "target": "es2020"
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "strictTemplates": true
  }
}

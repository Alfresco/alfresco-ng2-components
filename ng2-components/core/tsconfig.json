{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "newLine": "lf",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": ".",
    "rootDirs": [
      "."
    ],
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "ng2-alfresco-core": ["../ng2-alfresco-core/"],
      "@adf/process-services/*": ["../process-services/*"],
      "@adf/content-services/*": ["../content-services/*"],
      "@adf/core/*": ["../core/*"]
    }
  },
  "files": [
    "public-api.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "demo",
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@adf/core",
    "skipTemplateCodegen": true
  }
}

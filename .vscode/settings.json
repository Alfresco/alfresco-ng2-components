// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "**/.happypack": true
  },
  "markdownlint.config": {
    "MD032": false,
    "MD004": false,
    "MD024": false,
    "MD009": false,
    "MD013": false,
    "MD036": false,
    "MD033": false,
    "MD031": false
  },
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "stylelint.config": {
      "extends": "./stylelint-config"
  },
  "stylelint.configFile": "stylelint-config.json",
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss"
  ],
  "editor.guides.indentation": true
}

{
  "version": "2.0.0",
  "inputs": [
      {
          "id": "browser",
          "type": "pickString",
          "options": [
              "ChromeHeadlessDebug",
              "ChromeDebug"
          ],
          "default": "ChromeHeadlessDebug",
          "description": "browser",
      }
  ],
  "tasks": [
      {
          "type": "shell",
          "label": "Karma Single File Run",
          "command": "${workspaceFolder}/.vscode/karma-file-test-launcher.js",
          "args": [
              "${relativeFile}",
              "${input:browser}"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": {
              "owner": "typescript",
              "fileLocation": "relative",
              "pattern": {
                  "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                  "file": 1,
                  "location": 2,
                  "severity": 3,
                  "code": 4,
                  "message": 5
              },
              "background": {
                  "activeOnStart": true,
                  "beginsPattern": "(.*)Generating browser application bundles(.*)",
                  "endsPattern": "(.*)Browser application bundle generation complete."
              }
          },
          "group": "none",
          "isBackground": true,
          "runOptions": {
              "instanceLimit": 1,
          },
          "detail": "Runs a script to determine the NX project name and path",
      },
      {
          "label": "Prompt for task termination",
          "type": "process",
          "command": "${command:workbench.action.tasks.terminate}"
      }
  ]
}
